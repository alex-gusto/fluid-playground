		"fluid-framework": "2.0.0-rc.3.0.0",
		"lodash.debounce": "^4.0.8",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^6.23.0",
		"ts-loader": "^9.5.1"
	},
	"devDependencies": {
		"@fluidframework/build-common": "^2.0.3",
