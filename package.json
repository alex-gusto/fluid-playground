		"jest": "^29.0.0",
		"jest-junit": "^16.0.0",
		"jest-puppeteer": "^9.0.0",
		"prettier": "^3.0.3",
		"puppeteer": "^21.0.0",
		"react-refresh-typescript": "^2.0.9",
		"start-server-and-test": "^2.0.0",
		"tinylicious": "^4.0.0",
		"webpack": "^5.88.2",
